            android:id="@+id/radioThird"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Third 액티비티"/>
    </RadioGroup>
    <Button
        android:id="@+id/btnMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="새 화면 열기"/>

